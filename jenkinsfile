pipeline {
    agent any 
    tools{
        nodejs 'nodejs'
    }
    stages {
        stage('clone') { 
            steps {
                git clone repo
            }
        }
        stage('npm install') { 
            steps {
                nodejs ('nodejs')
                npm 'install'
                
            }
        }
        stage('build') { 
            steps {
                sh 'npm run build'
            }
        }
        stage('docker build') { 
            steps {
                sh 'npm run build'
            }
        }
    }
}